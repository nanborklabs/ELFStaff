<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- the layout to get Email and phone number-->

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:id="@+id/forgot_password"
        android:visibility="invisible"
        android:layout_marginTop="80dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="60dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"

                android:text="Email"
                android:paddingTop="8dp"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView2" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:hint="E-mail"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/fp_email_ted"
                android:gravity="center"
                android:layout_height="60dp"
                android:layout_marginRight="16dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="60dp"
            android:layout_marginTop="40dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"

                android:text="Phone Number"
                android:paddingTop="4dp"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/forgot_phone_number" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:hint="Phone Number"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/fp_phone_ted"
                android:layout_height="60dp"
                android:layout_marginRight="16dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/forgot_edit_phone_number"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Button
            android:layout_width="140dp"
            android:textSize="18sp"
            android:text="Submit"
            android:layout_marginTop="40dp"

            android:id="@+id/fp_check_button"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


    <!--the layout to Reset Password-->
    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/new_password"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="60dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"

                android:text="New Password"
                android:paddingTop="8dp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/forgot_p_text" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:hint="New Password"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/fp_pass_ted"
                android:gravity="center"
                android:layout_height="60dp"
                android:layout_marginRight="12dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/forgot_p_edittext"

                    android:layout_height="60dp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="60dp"
            android:layout_marginTop="40dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"

                android:text="Re-Enter Password"
                android:paddingTop="4dp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/forogot_ren_text" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:hint="Re Enter Password"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/fp_rpass_ted"
                android:gravity="center"
                android:layout_height="60dp"
                android:layout_marginRight="12dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/forogot_ren_edit"
                    android:layout_height="60dp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:text="Submit"
            android:layout_marginTop="40dp"

            android:id="@+id/fp_new_password_button"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset Password"
        android:id="@+id/textView8"
        android:layout_gravity="left|top"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp" />

</FrameLayout>