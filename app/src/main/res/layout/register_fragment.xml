<?xml version="1.0" encoding="utf-8"?>

<io.codetail.widget.RevealFrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"

                android:id="@+id/rl_first_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/gender_text"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:text="Choose Your Gender"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/gender_radio_group"
        android:layout_below="@id/gender_text"
        android:layout_height="160dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="male"
            android:layout_height="160dp" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="female"
            android:button="@null"
            android:gravity="center"
            android:layout_height="160dp"
            android:checked="false" />


    </RadioGroup>
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_below="@id/gender_radio_group"
        android:id="@+id/name_text"
        android:gravity="center"
        style="@style/register_page1_edit_text"
        android:hint="Enter your Name"
        android:layout_height="60dp" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_below="@id/name_text"
        android:hint="Password"
        style="@style/register_page1_edit_text"
        android:gravity="center"
        android:id="@+id/pas_register"

        android:layout_height="60dp" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/re_pass_register"
        style="@style/register_page1_edit_text"
        android:hint="Re-enter Password"
        android:gravity="center"
        android:layout_below="@id/pas_register"
        android:layout_height="60dp" />
    <Button
        android:layout_width="match_parent"
        android:text="Next"
        android:id="@+id/next_button"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/re_pass_register"

        android:layout_height="60dp" />

</RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical" android:layout_width="match_parent"
                  android:id="@+id/ll_secondpage"
                  android:visibility="invisible"
                  android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="Let's Get you Started"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="16dp"
            android:layout_height="45dp" />
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/register_email_text"
            android:hint="E-mail"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/register_phone_number"
            android:hint="Enter you mobile number"/>
        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            style="@style/autocomplete"
            android:id="@+id/register_state"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:hint="State"/>

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:id="@+id/register_city"
            style="@style/autocomplete"
            android:hint="City"/>

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:id="@+id/board_register"
            style="@style/autocomplete"
            android:hint="Board"/>
        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:id="@+id/register_school"
            android:gravity="center"
            style="@style/autocomplete"
            android:hint="School Name"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Submit"

            android:layout_marginTop="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:id="@+id/submit_register"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>



</io.codetail.widget.RevealFrameLayout>
