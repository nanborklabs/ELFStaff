<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/radio_group_subject"
        android:background="#FFFFFF"
        android:weightSum="5"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:button="@null"
            style="@style/radio_button"

            android:text="P"

            />
        <RadioButton android:id="@+id/radio_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            style="@style/radio_button"
            android:text="C"
            />
        <RadioButton android:id="@+id/radio_m"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/radio_button"
            android:layout_height="wrap_content"
            android:text="M"
            />
        <RadioButton android:id="@+id/radio_cs"
            android:layout_width="0dp"
            style="@style/radio_button"
            android:foreground="?android:selectableItemBackground"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CS"
            />
        <RadioButton android:id="@+id/radio_b"
            android:layout_width="0dp"
            style="@style/radio_button"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CS"
            />
    </RadioGroup>
    <android.support.design.widget.TabLayout
        android:id="@+id/report_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"

        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"

        app:tabMode="fixed" />
    <android.support.v4.view.ViewPager
        android:id="@+id/report_pager"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="4"
        />


</LinearLayout>