<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="card_middle_text">
        <item name="android:textSize">@dimen/card_view_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="list_card_middle_textviews">
        <item name="android:textSize">@dimen/tsize_card_middle_list</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

    <style name="image_card_middle">

        <item name="android:layout_gravity">center</item>
    </style>

    <style name="accept_right_textview">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/accept_page_text_Size</item>
    </style>
    <style name="radio_button">


        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_radio_button</item>


        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:button">@null</item>


    </style>

    <style name="report_page_list_textview">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
